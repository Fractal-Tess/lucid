{
  "name": "alpha",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @alpha/backend dev",
    "dev:setup": "turbo -F @alpha/backend dev:setup",
    "check": "oxlint && oxfmt --write",
    "shadcn": "bunx shadcn-svelte@latest add $@ -c packages/ui"
  },
  "dependencies": {
    "@alpha/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@alpha/config": "workspace:*",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.7.5",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
