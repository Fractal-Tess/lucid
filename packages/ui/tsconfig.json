{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "public",
    "src/lib/server/**",
    "src/lib/utils/**",
    "src/lib/hooks/**",
    "src/lib/components/ui/**"
  ]
}
