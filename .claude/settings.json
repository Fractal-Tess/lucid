{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // .tool_input.path' | xargs -I {} sh -c 'oxfmt --write \"{}\" 2>/dev/null || true'"
          }
        ]
      }
    ]
  }
}
